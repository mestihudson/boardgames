{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "removeComments": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "target",
    "typeRoots": [ "./node_modules/@types" ],
    "types": ["node", "cucumber"],
    "baseUrl": ".",
    "paths": {
			"@/*": ["./src/*"]
		}
  },
  "exclude": [
    "node_modules",
    "target"
  ],
  "include": [ "src/**/*" ]
}
